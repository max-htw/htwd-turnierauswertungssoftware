skinparam linetype ortho
skinparam nodesep 100

object Turnier
Turnier : + Name
Turnier : + Datum
Turnier : \n
object Organisator
Organisator : + Name
object Auswertung
object Turnierplan
  Turnierplan : + Bedingungen
object Match
  Match : + Spielstand
  Match : + Zeit
  Match : + Spielfeld
object Team
  Team : + Name
